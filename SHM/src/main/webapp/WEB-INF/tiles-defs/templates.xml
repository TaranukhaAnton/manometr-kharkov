<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>

    <!-- Default Main Template -->
    <definition name=".mainTemplate" template="/WEB-INF/templates/main.jsp">
        <put-attribute name="title" value="Simple Tiles 2 Example" type="string"/>
        <put-attribute name="header" value="/WEB-INF/templates/header.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/templates/footer.jsp"/>
        <put-attribute name="menu" value="/WEB-INF/templates/menu.jsp"/>
        <put-attribute name="body" value="/WEB-INF/templates/blank.jsp"/>
    </definition>

    <definition name="index" extends=".mainTemplate">
        <put-attribute name="body" value="/WEB-INF/jsp/index.jsp"/>
    </definition>

    <definition name="info/about" extends=".mainTemplate">
        <put-attribute name="body" value="/WEB-INF/jsp/info/about.jsp"/>
    </definition>

    <definition name="userList" extends=".mainTemplate">
        <put-attribute name="body" value="/WEB-INF/jsp/users/users.jsp"/>
    </definition>

    <definition name="baseLayout" template="/WEB-INF/pages/service/baseLayout.jsp">
        <put-attribute name="title" value="Tiles Example"/>
        <put-attribute name="header" value="/WEB-INF/pages/service/header.jsp"/>
        <put-attribute name="menu" value="/WEB-INF/pages/service/menu.jsp"/>
        <put-attribute name="body" value="/WEB-INF/pages/body.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/pages/service/footer.jsp"/>
        <put-list-attribute name="cssItems">
            <add-attribute value="/css/main.css"/>
            <add-attribute value="/css/smartTable.css"/>
            <add-attribute value="/css/menu.css"/>
            <add-attribute value="/js/jquery-1.6.4.js"/>
            <add-attribute value="/js/menu.js"/>
        </put-list-attribute>
        <!--<put-list-attribute name="jsItems">-->
            <!--<add-attribute value="/js/menu.js"/>-->
        <!--</put-list-attribute>-->

    </definition>
    <definition name="users" extends="baseLayout">
        <put-attribute name="title" value="Пользователи"/>
        <put-attribute name="body" value="/WEB-INF/pages/users/users.jsp"/>
    </definition>
    <definition name="index" extends="baseLayout">
        <put-attribute name="title" value="Пользователи"/>
        <put-attribute name="body" value="/WEB-INF/pages/users/users.jsp"/>
    </definition>

</tiles-definitions>