<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


    <bean name="contentDispositionMappings" class="org.springframework.beans.factory.config.MapFactoryBean">
        <property name="targetMapClass">
            <value>java.util.HashMap</value>
        </property>
        <property name="sourceMap">
            <map>
                <entry key="xls" value="attachment;filename=invoice.xls"/>
                <entry key="pdf" value="attachment;filename=invoice.pdf"/>
            </map>
        </property>
    </bean>



    <bean id="invoiceReport" class="org.springframework.web.servlet.view.jasperreports.JasperReportsMultiFormatView"
          p:url="classpath:invoice.jrxml" p:reportDataKey="dataSource"
          p:contentDispositionMappings-ref="contentDispositionMappings"/>

</beans>