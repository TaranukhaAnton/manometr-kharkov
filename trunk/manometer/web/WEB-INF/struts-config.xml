<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "struts-config_1_3.dtd">

<struts-config>
    <form-beans>
        <form-bean name="userLoginForm" type="application.actionForms.UserLoginForm"/>
        <form-bean name="userForm" type="application.actionForms.UserForm">
            <form-property name="fioUkr" type=""/>
        </form-bean>
        <form-bean name="customerForm" type="application.actionForms.CustomerForm"/>
        <form-bean name="contactForm" type="application.actionForms.ContactForm"/>
        <form-bean name="testForm" type="application.actionForms.TestForm"/>
    </form-beans>
    <global-exceptions/>
    <global-forwards>

        <forward name="enter" path="/pages/users/userLogin.jsp"/>
    </global-forwards>
    <action-mappings>

        <action attribute="userLoginForm" input="/pages/users/userLogin.jsp"
                name="userLoginForm" path="/userLogin" scope="request" validate="false"
                type="application.actions.UserLoginAction" parameter="method">
            <forward name="success" path="/invoiceAction.do?method=viewInvoices" redirect="true"/>

        </action>

        <action path="/UserSetUp" name="userForm" type="application.actions.UserAction"
                scope="request" parameter="method" cancellable="true">
            <forward name="userForm" path="userForm"/>
            <forward name="users" path="/UserProcess.do?method=getUsers"
                     redirect="true"/>

        </action>

        <action path="/UserProcess" name="userForm" type="application.actions.UserAction"
                scope="request" parameter="method" cancellable="true">
            <forward name="users" path="users"/>
            <forward name="userForm" path="userForm"/>
        </action>


        <action path="/CustomerProcess" type="application.actions.CustomerAction"
                name="customerForm" scope="request" parameter="method" cancellable="true"
                validate="false">
            <forward name="customers" path="customers"/>
            <forward name="customerForm" path="customerForm"/>
        </action>

        <action path="/CustomerSetUp" name="customerForm" attribute="customerForm"
                input="customerForm" scope="request" type="application.actions.CustomerAction"
                parameter="method" validate="true" cancellable="true">
            <forward name="customerForm" path="customerForm"/>
            <forward name="customers" path="/CustomerProcess.do?method=getCustomers"
                     redirect="true"/>
            <forward name="findContacts" path="/ContactShow.do?method=getContacts"
                     redirect="true"/>

        </action>

        <action path="/ContactShow" type="application.actions.ContactAction"
                name="contactForm" scope="request" parameter="method" cancellable="true"
                validate="false">
            <forward name="contacts" path="contacts"/>
            <forward name="contactForm" path="contactForm"/>
        </action>

        <action path="/ContactSaveOrUpdate" name="contactForm" scope="request"
                type="application.actions.ContactAction" parameter="method" validate="false"
                cancellable="true">
            <forward name="contactForm" path="contactForm"/>
            <forward name="contacts" path="/ContactShow.do?method=getContacts"
                     redirect="true"/>
        </action>

        <action path="/testAction" parameter="method" name="testForm" scope="request"
                type="application.actions.TestAction" validate="false">
            <forward name="redactCo" path="redactCoCompatibility"/>
            <forward name="redactAo" path="redactAoCompatibility"/>
            <forward name="redactOp" path="redactOpCompatibility"/>
            <forward name="addCoForm" path="addCoForm"/>
            <forward name="addAoForm" path="addAoForm"/>
            <forward name="addOpForm" path="addOpForm"/>
            <forward name="addListForm" path="addListForm"/>
            <forward name="addListFormExt" path="addListFormExt"/>

            <!--<forward name="redactPrice" path="redactPrice"/>-->
            <!--<forward name="viewPriceList" path="viewPriceList"/>-->
            <forward name="result" path="/invoiceAction.do?method=viewInvoice" redirect="true"/>


        </action>


        <action path="/priceAction" parameter="method"
                type="application.actions.PriceAction">
            <forward name="redactMatrixPrice" path="redactMatrixPrice"/>
            <forward name="redactListPrice" path="redactListPrice"/>
            <forward name="redactOptionPrice" path="redactOptionsPrice"/>
        </action>

        <action path="/supplierAction" parameter="method"
                type="application.actions.SupplierAction">
            <forward name="ok" path="/supplierAction.do?method=viewSuppliers" redirect="true"/>
            <forward name="suppliers" path="suppliers" redirect="true"/>
            <forward name="edit" path="supplierForm"/>

        </action>

        <action path="/invoiceAction" parameter="method"
                type="application.actions.InvoiceAction">
            <forward name="ok" path="/invoiceAction.do?method=viewInvoices" redirect="true"/>
            <forward name="invoices" path="invoices"/>
            <forward name="edit" path="invoiceForm"/>
            <forward name="bookings" path="bookings"/>
            <forward name="bookingForm" path="bookingForm" redirect="true"/>
            <forward name="paymentsForm" path="paymentsForm" redirect="true"/>
            <forward name="shipmentsForm" path="shipmentsForm" redirect="true"/>
        </action>


        <action path="/statisticAction" parameter="method"
                type="application.actions.StatisticAction">
            <forward name="paymentArrears" path="paymentArrears"/>
        </action>

    </action-mappings>
    <controller processorClass="org.apache.struts.tiles.TilesRequestProcessor"/>
    <!--<message-resources parameter="application.ApplicationResources"/>-->
    <message-resources parameter="MessageResources"/>
    <plug-in className="org.apache.struts.tiles.TilesPlugin">
        <set-property value="/WEB-INF/tiles-defs.xml" property="definitions-config"/>
    </plug-in>
    <!--<plug-in className="application.HibernatePlugIn"/>-->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml" property="pathnames"/>
    </plug-in>

</struts-config>

