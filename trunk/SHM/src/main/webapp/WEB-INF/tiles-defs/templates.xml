<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

  <definition name="baseLayout" template="/WEB-INF/pages/service/baseLayout.jsp">
        <put-attribute name="title" value="Tiles Example"/>
        <put-attribute name="header" value="/WEB-INF/pages/service/header.jsp"/>
        <put-attribute name="menu" value="/WEB-INF/pages/service/menu.jsp"/>
        <put-attribute name="body" value="/WEB-INF/pages/body.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/pages/service/footer.jsp"/>
        <put-list-attribute name="cssItems"  >
            <add-attribute value="/css/main.css"/>
            <add-attribute value="/css/smartTable.css"/>
            <add-attribute value="/css/menu.css"/>
            <add-attribute value="/js/jquery-1.6.4.js"/>
            <add-attribute value="/js/menu.js"/>
        </put-list-attribute>
        <put-list-attribute name="ppp" />

    </definition>

    <definition name="editCustomer" extends="baseLayout">
        <put-attribute name="title" value="Пользователи"/>
        <put-attribute name="body" value="/WEB-INF/pages/customers/customerFormNew.jsp"/>
        <put-list-attribute name="ppp" >
            <add-attribute value="/js/select-chain.js"/>
            <add-attribute value="/js/jquery.autocomplete.js"/>
            <add-attribute value="/js/customer.js"/>
            <add-attribute value="/js/jquery.validate.js"/>
            <add-attribute value="/js/additional-methods.min.js"/>
            <add-attribute value="/css/jquery.autocomplete.css"/>
        </put-list-attribute>
    </definition>
    <definition name="customers" extends="baseLayout">
        <put-attribute name="title" value="Пользователи"/>
        <put-attribute name="body" value="/WEB-INF/pages/customers/customers.jsp"/>

        <put-list-attribute name="ppp" >
            <add-attribute value="/js/json.js"/>
        </put-list-attribute>

    </definition>


    <definition name="editContact" extends="baseLayout">
        <put-attribute name="title" value="Пользователи"/>
        <put-attribute name="body" value="/WEB-INF/pages/contacts/contactFormNew.jsp"/>
    </definition>
    <definition name="contacts" extends="baseLayout">
        <put-attribute name="title" value="Пользователи"/>
        <put-attribute name="body" value="/WEB-INF/pages/contacts/contacts.jsp"/>
    </definition>

    <definition name="editUser" extends="baseLayout">
        <put-attribute name="title" value="Пользователи"/>
        <put-attribute name="body" value="/WEB-INF/pages/users/newUserForm.jsp"/>
    </definition>

    <definition name="users" extends="baseLayout">
        <put-attribute name="title" value="Пользователи"/>
        <put-attribute name="body" value="/WEB-INF/pages/users/users.jsp"/>
    </definition>
    <definition name="index" extends="baseLayout">
        <put-attribute name="title" value="Пользователи"/>
        <put-attribute name="body" value="/WEB-INF/pages/users/users.jsp"/>
    </definition>

</tiles-definitions>